<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create a post</title>
    <link rel="icon" type="image/x-icon" href="../assets/logo-primary-vector.svg">
    <!-- load bootstrap stylesheet (css) -->
    <link rel="stylesheet" href="/bootstrap.min.css">
    <!-- load local stylesheet (css) -->
    <link rel="stylesheet" href="/styles.css">
    <!-- loading jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <%- include("partials/navbar.ejs") %>
    <%- include("partials/flashes.ejs") %>
    <div class="container-fluid">
        <div class="row">        
            <div class="col-12">
                <br>
                <h1>Share a look</h1>
                <form id="create-form"
                    method="POST"
                    action="/create"
                    enctype="multipart/form-data">
                    
                    <label for="city" class="bold" style="margin-bottom: 5px;">City</label>
                    <p class="text-timestamp">Select from the dropdown</p>
                    <select id="city" name="city">
                        <% cityList.forEach((elt) => { %>
                            <option value="<%=elt%>"><%=elt%></option>
                        <% }) %>
                    </select>

                    <br>

                    <label for="tags" class="bold" style="margin-bottom: 5px;">Tags</label>
                    <p class="text-timestamp">Type each tag with a hashtag in the front, separated by a space.</p>
                    <input type="text" id="tags" name="tags">

                    <br>

                    <label for="description" class="bold" style="margin-bottom: 5px;">Description</label>
                    <p class="text-timestamp">Say whatever youâ€™d like about the look!</p>
                    <input type="text" id="description" name="description">
                    
                    <br>

                    <label for="alttext" class="bold" style="margin-bottom: 5px;">Alt Text</label>
                    <p class="text-timestamp">Describe your image.</p>
                    <input type="text" id="alttext" name="alttext">
                    
                    <br>

                    <label for="imageUpload" class="bold" style="margin-bottom: 5px;">Image</label>
                    <p class="text-timestamp">Choose an image to upload</p>
                    <input type="file" accept="image/*" id="imageUpload" name="imageUpload">

                    <br>

                    <input type="submit" value="UPLOAD POST">

                    <br>
                </form>
            
            </div>
        </div>
    </div>

    <!-- load local js -->
    <script src="/main.js"></script>
    <!-- load bootstrap js -->
    <script src="../bootstrap.min.js"></script>
</body>
</html>
