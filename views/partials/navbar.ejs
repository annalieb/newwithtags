<hr style="margin-top: 10px; margin-bottom: 15px">

<script>
  var logged_in = "<%= logged_in %>";
  if (logged_in !== 'false') {
    $(".logged-in").show();
    $(".not-logged-in").hide();
  } else {
    $(".logged-in").hide();
    $(".not-logged-in").show();
  }
</script>

<script>

  let currentPage = window.location.pathname;
  console.log("currentpage:");
  console.log(currentPage);

  let link = document.getElementById(currentPage);
  console.log(link);
  if (link) {
    link.classList.add('active');
  }
  if (currentPage == "/profile/liked") {
    let linkProfileLiked = document.getElementById("/profile/posted");
    linkProfileLiked.classList.add('active');
  }
</script>
