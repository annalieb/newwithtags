<script>
  var logged_in = "<%= logged_in %>";
  if (logged_in !== 'false') {
    $(".logged-in").show();
    $(".not-logged-in").hide();
  } else {
    $(".logged-in").hide();
    $(".not-logged-in").show();
  }
</script>