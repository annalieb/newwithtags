<div class="container-fluid">
  <nav class="navbar row">

    <a href="/">
      <img src="../../assets/logo-primary-vector.svg" class="nav-logo" alt="logo">
    </a>

    <ul class="nav-items">
      <li id="/">
        <a class="nav-link" href="/">Home</a>
      </li>
      <li id="/create">
        <a class="nav-link" href="/create">Create</a>
      </li>
      <li id="/profile/posted" class="logged-in">
        <a class="nav-link" href="/profile/posted">My posts</a>
