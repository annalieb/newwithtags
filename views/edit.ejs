<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Edit a post</title>
    <link rel="icon" type="image/x-icon" href="../assets/logo-primary-vector.svg">
    <!-- load bootstrap stylesheet (css) -->
    <link rel="stylesheet" href="/bootstrap.min.css">
    <!-- load local stylesheet (css) -->
    <link rel="stylesheet" href="/styles.css">
    <!-- loading jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <%- include("partials/navbar.ejs") %>
    <%- include("partials/flashes.ejs") %>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12" style="padding-bottom: 10px">
                <a>
                    <img style="padding-right: 5px; margin-top:-3px" src="../assets/arrow-back.svg" alt="Back arrow">Back
                </a>
            </div>
        
            <div class="col-12">
                <h1>Edit your look</h1>
                <form id="edit-form"
                    method="POST"
                    action="/edit/<%= post.postID %>">
                    <label for="city" class="bold" style="margin-bottom: 5px;">City</label>
                    <p class="text-timestamp">Select from the dropdown</p>
                    <select id="city" name="city">
                        <% cityList.forEach((elt) => { %>
                            <option value="<%= elt %>" <%= post.city === elt.toLowerCase() ? 'selected' : '' %>><%= elt %></option>
                        <% }) %>
                    </select>

                    <br>

                    <label for="tags" class="bold" style="margin-bottom: 5px;">Tags</label>
                    <p class="text-timestamp">Type each tag with a hashtag in the front, separated by a space.</p>
                    <input type="text" id="tags" name="tags" value="<% post.tags.forEach((elt) => { %>#<%= elt %> <% }) %>">

                    <br>

                    <label for="description" class="bold" style="margin-bottom: 5px;">Description</label>
                    <p class="text-timestamp">Say whatever you'd like about the look!</p>
                    <input type="text" id="description" name="description" value="<%= post.caption %>">
                    
                    <br>

                    <input type="submit" value="EDIT POST">
                </form>
            </div>
        </div>
    </div>

    <!-- load local js -->
    <script src="/main.js"></script>
    <!-- load bootstrap js -->
    <script src="../bootstrap.min.js"></script>
</body>
</html>
