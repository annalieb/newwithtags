<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Profile</title>
    <link rel="icon" type="image/x-icon" href="../assets/logo-primary-vector.svg">
    <!-- load bootstrap stylesheet (css) -->
    <link rel="stylesheet" href="/bootstrap.min.css" />
    <!-- load local stylesheet (css) -->
    <link rel="stylesheet" href="/styles.css" />
    <!-- loading jquery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
</head>
<body>
    <%- include("partials/navbar.ejs") %>
    <%- include("partials/flashes.ejs") %>
    <div class="container-fluid">
        <div class="row" style="margin-top: 20px">
        
            <div class="col-lg-4 col-md-4 col-sm-12">

                <h1><%= action %> by <%=user.userFirstName%></h1>
                <div class="container-comment">
                    <a class="selector" href="/profile/posted">Posted</a>
                    <a class="selector" href="/profile/liked">Liked</a>
        
                </div>
        
                <hr>
                <h2 class="bold">Profile details</h2>
                <p>Visible only to you</p>
                <p style="margin-bottom:5px">Email</p>
                <p class="text-timestamp"><%=user.email%></p>
                <p style="margin-bottom:5px">Since</p>
                <p class="text-timestamp"><%=user.dateCreated%></p>
                <form method="post" action="/logout"><input type="submit" value="logout"></form></p>

            </div>

            <div class="col-lg-8 col-md-8 col-sm-12" style="display: flex; flex-wrap: wrap;">

                <% posts.forEach((elt) => { %>
                    <div class="col-6 gallery-image-profile">
                        <a href="/post-single/<%= elt.postID %>">
                        <img src=<%= elt.imageURL %>>
                    </div>
                <%});%>
            </div>
    
        </div>
    </div>

    <!-- load local js -->
    <script src="/main.js"></script>
    <!-- load bootstrap js -->
    <script src="../bootstrap.min.js"></script>
</bodys>
</html>



